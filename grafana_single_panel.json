{
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "type": "stat",
      "title": "BIND Service Status",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "bind_up",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } } }
          ]
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 }
    },
    {
      "type": "time_series",
      "title": "Total Queries",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "bind_queries_total", "refId": "A" }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 4, "y": 0 }
    },
    {
      "type": "time_series",
      "title": "Query Failures",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "bind_query_failures_total", "refId": "A" }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 12, "y": 0 }
    },
    {
      "type": "gauge",
      "title": "Record Accuracy (%)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "bind_record_accuracy", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "orange", "value": 70 },
              { "color": "green", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        }
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 4 }
    },
    {
      "type": "time_series",
      "title": "Query Latency (s)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "bind_latency_seconds", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 4 }
    },
    {
      "type": "time_series",
      "title": "Security Failures",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "bind_security_failures_total", "refId": "A" }
      ],
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 4 }
    },
    {
      "type": "stat",
      "title": "Direct vs BGP VIP Difference",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "bind_direct_vs_bgp_difference", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["last"] },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "MATCH" }, "1": { "text": "DIFFER" } } }
          ]
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 4, "x": 18, "y": 0 }
    }
  ],
  "schemaVersion": 30,
  "title": "BIND DNS Exporter Dashboard",
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" }
}
